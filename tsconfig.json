{
  "compilerOptions": {
    "target": "es5",                               
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom", "es6"], 
    "outDir": "./build",                              
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "esModuleInterop": true,                      
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true      
  }
}
